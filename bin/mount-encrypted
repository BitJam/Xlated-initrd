#!/bin/bash

ME=${0##*/}
CONF_FILE=/live/config/initrd.out

main() {
    [ "$UID" -eq 1 ] || fatal "This script must be run as root"
    test -r $CONF_FILE || fatal "Could not find file %s" $CONF_FILE
    . $CONF_FILE
}


fatal() {
    local fmt=$1; shift
    printf "$fmt\n" "$@" >&2
    exit 3
}

main "$@"
